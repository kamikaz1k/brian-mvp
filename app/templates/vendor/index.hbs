<div class="container text-center">
    <h1>Your Items</h1>

    {{#each model.items as |item|}}
        <div class="row mb-3">
            <div class="col">{{item.name}}</div>
            <div class="col">{{simple-countdown endDateTimeString=item.timerStopAt}}</div>
            <div class="col">
                {{#link-to "vendor.item.new" class="btn"}}
                    Set Timer
                {{/link-to}}
            </div>
        </div>
    {{/each}}

    <div class="row mb-3">
        <div class="col">
            Add Item
        </div>
        <div class="col">
            {{#link-to "vendor.item.new" class="btn btn-primary"}}
                Set Timer
            {{/link-to}}
        </div>
    </div>

    <div class="text-right">
        {{#link-to "non-vendor.index" class="btn btn-primary"}}Back{{/link-to}}
    </div>
</div>
